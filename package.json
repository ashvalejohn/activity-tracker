{
  "name": "activity-tracker",
  "version": "1.0.0",
  "description": "A simple activity tracker to log what you did and how you felt about it.",
  "main": "server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "client": "cd frontend && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashvalejohn/activity-tracker.git"
  },
  "author": "ashvalejohn",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ashvalejohn/activity-tracker/issues"
  },
  "homepage": "https://github.com/ashvalejohn/activity-tracker#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "mongoose": "^5.0.14",
    "yarn": "^1.5.1"
  },
  "devDependencies": {
    "concurrently": "^3.5.1"
  }
}
